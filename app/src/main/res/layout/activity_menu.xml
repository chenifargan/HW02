<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMenu">

    <ImageView
        android:id="@+id/demo_IMG_back"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/img_background" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/demo_IMG_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/img_howtopaly1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_without_BTN"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="80dp"
                android:backgroundTint="#7703A9F4"
                android:fontFamily="@font/baloo_chettan"
                android:text="game with out button"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="50dp"


                app:strokeColor="@color/white">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_with_BTN"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:backgroundTint="#7703A9F4"
                android:fontFamily="@font/baloo_chettan"

                android:layout_marginTop="5dp"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:textAllCaps="false"
                app:cornerRadius="50dp"
                android:textColor="@color/black"

                app:strokeColor="@color/white"
                android:text="game with button" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:hint="ENTER NAME"

                android:textColor="@color/black"


                android:padding="16dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="30"
                    android:fontFamily="@font/baloo_chettan"

                    app:strokeColor="@color/white"
                    app:cornerRadius="50dp"
                    android:background="#BC03A9F4"
                    android:imeOptions="actionDone" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/bobspong"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:visibility="visible"
                tools:srcCompat="@drawable/img_bobspong" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/menuRecordTableAndMap"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:backgroundTint="#7703A9F4"

                android:layout_gravity="center_vertical|center_horizontal"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="90dp"
                app:strokeColor="@color/white"
                android:fontFamily="@font/baloo_chettan"


                android:text="Record Table And Map"


                />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>